<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.srikanth.glassstream">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-feature android:name="com.google.android.glass" android:required="true"/>

    <application
        android:label="@string/app_name"
        android:allowBackup="false"
        android:icon="@android:drawable/presence_video_online">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="com.google.android.glass.category.DIRECTORY"/>
            </intent-filter>
        </activity>

        <service
            android:name=".svc.StreamService"
            android:enabled="true"
            android:exported="false" />
    </application>
</manifest>
